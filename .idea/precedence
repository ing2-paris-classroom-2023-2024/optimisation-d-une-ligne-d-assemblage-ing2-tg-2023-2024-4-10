#include <stdio.h>
#include <stdlib.h>

void precedence_algorithm(int V[], int A[][2], int n);

int main() {
    FILE *file = fopen("precedences.txt", "r");
    if (file == NULL) {
        fprintf(stderr, "Erreur lors de l'ouverture du fichier precedences.txt\n");
        return 1;
    }

   
    int n, i, j;
    fscanf(file, "%d", &n);

    int (*A)[2] = malloc(n * sizeof(int[2]));

    for (int k = 0; k < n; k++) {
        fscanf(file, "%d %d", &i, &j);
        A[k][0] = i;
        A[k][1] = j;
    }

    fclose(file);

    int *V = malloc(n * sizeof(int));
    precedence_algorithm(V, A, n);

    for (int op = 0; op < n; op++) {
        printf("Opération %d affectée à la station %d\n", op + 1, V[op]);
    }

    free(V);
    free(A);

    return 0;
}

