#include <stdio.h>
#include <stdlib.h>

void operation_algorithm(int V[], double tj[], int n, double T0);

int main() {
    FILE *file = fopen("operation.txt", "r");
    if (file == NULL) {
        fprintf(stderr, "Erreur lors de l'ouverture du fichier operation.txt\n");
        return 1;
    }

    int n;
    fscanf(file, "%d", &n);

    int *V = malloc(n * sizeof(int));
    double *tj = malloc(n * sizeof(double));

    for (int op = 0; op < n; op++) {
        fscanf(file, "%d %lf", &V[op], &tj[op]);
    }
    fclose(file);

   double T0;
    file = fopen("temps_cycle.txt", "r");
    if (file == NULL) {
        fprintf(stderr, "Erreur lors de l'ouverture du fichier temps_cycle.txt\n");
        return 1;
    }
    fscanf(file, "%lf", &T0);
    fclose(file);

    operation_algorithm(V, tj, n, T0);

    for (int op = 0; op < n; op++) {
        printf("Opération %d affectée à la station %d\n", op + 1, V[op]);
    }
    free(V);
    free(tj);

    return 0;
}

