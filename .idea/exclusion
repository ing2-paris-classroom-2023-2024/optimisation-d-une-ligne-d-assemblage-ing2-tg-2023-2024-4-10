#include <stdio.h>
#include <stdlib.h>

#define MAX_STATIONS 100

int main() {
    FILE *file = fopen("exclusion.txt", "r");
    if (file == NULL) {
        fprintf(stderr, "Erreur lors de l'ouverture du fichier exclusion.txt\n");
        return 1;
    }
    int n, i, j;
    fscanf(file, "%d", &n);

    int V[n];
    int E[n][2];

    for (int k = 0; k < n; k++) {
        fscanf(file, "%d %d", &i, &j);
        E[k][0] = i;
        E[k][1] = j;
    }

    fclose(file);

    exclusion_algorithm(V, E, MAX_STATIONS, n);

//problemes sur l'affichage

    for (int station = 0; station < MAX_STATIONS; station++) {
        printf("Station %d : ", station + 1);
        for (int op = 0; op < n; op++) {
            if (V[op] == station + 1) {
                printf("%d ", op + 1);
            }
        }
        printf("\n");
    }

    return 0;
}
